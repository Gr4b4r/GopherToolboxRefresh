@model GopherToolboxRefresh.ViewModels.EditUserViewModel;
@{
    ViewData["Title"] = "Mofyfikacja Użytkownika";
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            function UpdateDynamicHeader() {
                let x = document.getElementById("DynamicHeaderValue");
                DynamicHeader.innerHTML = "Mofyfikacja: " + x.value
            }
        </script>
    }
}

<div class="card ">
    <div class="card-body adminSets">
        <h2 class="card-title" id="DynamicHeader">Mofyfikacja: @Model.Email</h2>
        <hr />
        <form asp-action="EditUser" method="post">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" oninput="UpdateDynamicHeader()" id="DynamicHeaderValue" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Imię</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label">Nazwisko</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nickname" class="control-label">Ksywka</label>
                <input asp-for="Nickname" class="form-control" />
                <span asp-validation-for="Nickname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthdate" class="control-label">Data urodzenia</label>
                <input asp-for="Birthdate" class="form-control" />
                <span asp-validation-for="Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label">Telefon kontaktowy</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rola" class="control-label">Rola</label>
                <select asp-for="Rola" class="form-select">
                    @if (Model.Rola == "Admin") {
                        <option value="Admin" selected>Admin</option>
                        <option value="Uzytkownik">Użytkownik</option>
                    }
                    else
                    {
                        <option value="Admin">Admin</option>
                        <option value="Uzytkownik" selected>Użytkownik</option>
                    }
                </select>
                <span asp-validation-for="Rola" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Zmiana hasła - puste, brak zmiany</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label">Powtórz hasło</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                 <br />
                @if (Model.Email != "admin@admin.pl")
                {
                     <input type="submit" value="Zapis zmiany" class="btn btn-primary" />
                }
                <a asp-action="UserManagement" class="btn btn-secondary">Powrót do listy</a>
            </div>
        </form>
    </div>
</div>


